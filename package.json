{
  "name": "equipment-rental",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "10.13.0",
    "yarn": "1.12.1"
  },
  "scripts": {
    "build": "express-scripts build",
    "clean": "express-scripts clean",
    "dev": "express-scripts start",
    "eject": "express-scripts eject",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "install:client": "yarn --cwd client install",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix",
    "postinstall": "yarn run install:client",
    "start": "node build/index.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@cszatma/express-plugin-typescript": "file:/Users/christopherszatmary/Developer/TypeScript/Projects/create-express-app/packages/@cszatma/express-plugin-typescript",
    "@cszatma/express-scripts": "file:/Users/christopherszatmary/Developer/TypeScript/Projects/create-express-app/packages/@cszatma/express-scripts",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.5",
    "concurrently": "^4.0.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint -c ./tslint.json -p ./tsconfig.json --fix -e client/**/*",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "client/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
